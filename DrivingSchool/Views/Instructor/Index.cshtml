@model InstructorIndexViewModel

@{
    ViewData["Title"] = "Инструкторы";
}

<script src="~/js/jquery.js"></script>
<script src="~/js/fileInput.js"></script>

@{ await Html.RenderPartialAsync("_Header"); }
<section class="container instructors">
    <h1 class="container-title">Наши инструкторы</h1>
    <form asp-controller="Instructor" asp-action="Index" method="get" class="instructors-search-form">
        <input value="@ViewData["CurrentFilter"]" type="text" name="search" placeholder="Найти">
        <button class="search-button" type="submit">
            <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-search" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                <path fill-rule="evenodd" d="M10.442 10.442a1 1 0 0 1 1.415 0l3.85 3.85a1 1 0 0 1-1.414 1.415l-3.85-3.85a1 1 0 0 1 0-1.415z"/>
                <path fill-rule="evenodd" d="M6.5 12a5.5 5.5 0 1 0 0-11 5.5 5.5 0 0 0 0 11zM13 6.5a6.5 6.5 0 1 1-13 0 6.5 6.5 0 0 1 13 0z"/>
            </svg>
        </button>
    </form>
    <div class="instructor-wrapper">
        @foreach (var instructor in Model.Instructors)
        {
            <div class="instructor-item">
                @if (User.IsInRole("Admin"))
                {
                    <form asp-controller="Instructor" asp-action="Remove" asp-route-id="@instructor.Id" class="delete-form" method="post">
                        <button type="submit">
                            <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px"
                                 viewBox="0 0 512 512" xml:space="preserve">
                                <circle style="fill:#E21B1B;" cx="256" cy="256" r="256"/>
                                <path style="fill:#C40606;" d="M510.28,285.304L367.912,142.936L150.248,368.608l140.928,140.928
                                        C406.352,493.696,497.056,401.288,510.28,285.304z"/>
                                <g>
                                    <path style="fill:#FFFFFF;" d="M354.376,371.536c-5.12,0-10.232-1.952-14.144-5.856L146.408,171.848
                                            c-7.816-7.816-7.816-20.472,0-28.28s20.472-7.816,28.28,0L368.52,337.4c7.816,7.816,7.816,20.472,0,28.28
                                            C364.608,369.584,359.496,371.536,354.376,371.536z"/>
                                    <path style="fill:#FFFFFF;" d="M160.544,371.536c-5.12,0-10.232-1.952-14.144-5.856c-7.816-7.816-7.816-20.472,0-28.28
                                            l193.832-193.832c7.816-7.816,20.472-7.816,28.28,0s7.816,20.472,0,28.28L174.688,365.68
                                            C170.784,369.584,165.664,371.536,160.544,371.536z"/>
                                </g>
                            </svg>
                        </button>
                    </form>
                }
                <img src="@instructor.Image.Path" alt="instructor">
                <div class="instructor-info">
                    <p class="instructor-name">@instructor.Fullname</p>
                    <span class="instructor-experience">
                        @if (instructor.Experience > 0 && instructor.Experience <= 1)
                        {
                            @:Опыт работы: @instructor.Experience год
                        }
                        else if (instructor.Experience >= 1 && instructor.Experience < 5)
                        {
                            @:Опыт работы: @instructor.Experience года
                        }
                        else
                        {
                            @:Опыт работы: @instructor.Experience лет
                        }
                    </span>
                </div>
            </div>
        }
    </div>
    @if (User.IsInRole("Admin"))
    {
        <form asp-controller="Instructor" asp-action="Add" method="post" class="instructor-form" enctype="multipart/form-data">
            <div class="form-group">
                <input asp-for="Fullname" type="text" placeholder="ФИО*" required>
            </div>
            <div class="form-group">
                <input asp-for="Experience" type="number" min="0" step="0.5" placeholder="Опыт работы*" required>
            </div>
            <div class="form-group">
                <input asp-for="Image" type="file" class="file-input" accept="image/jpeg,image/png,image/gif" required>
                <label asp-for="Image" class="fileName">Выберите изображение</label>
            </div>
            <div class="form-group">
                <button type="submit">Добавить</button>
            </div>
        </form>
    }
</section>

@{ await Html.RenderPartialAsync("_Footer"); }
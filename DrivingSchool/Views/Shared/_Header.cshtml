<header class="header">
    <nav class="navigation">

        <div class="nav-wrapper">
            <a asp-controller="Home" asp-action="Index" class="logo">
                <img class="logo" src="~/img/logo.png" alt="website logo">
            </a>
            @if (!User.IsInRole("Admin"))
            {
                <a asp-controller="Account" asp-action="SignIn" class="signIn">Войти</a>
            }
            else
            {
                <form asp-controller="Account" asp-action="SignOut" method="post">
                    <button class="signOut" type="submit">Выйти</button>
                </form>
            }
        </div>
        <div class="nav-links">
            <ul>
                @if (User.IsInRole("Admin"))
                {
                    <li>
                        <a asp-controller="TrainingApplication" asp-action="GetList">Cписок заявок</a>
                    </li>
                }
                <li>
                    <a asp-controller="Home" asp-action="GetTimetable">Расписание занятий</a>
                </li>
                <li>
                    <a asp-controller="Group" asp-action="Index">Ближайшие наборы</a>
                </li>
                <li>
                    <a asp-controller="Instructor" asp-action="Index">Наши инструкторы</a>
                </li>
                <li>
                    <a asp-controller="Feedback" asp-action="Index">Отзывы</a>
                </li>
            </ul>
        </div>
    </nav>
</header>
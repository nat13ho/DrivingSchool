@model SignInViewModel

@{
    ViewData["Title"] = "Авторизация";
}

@{ await Html.RenderPartialAsync("_Header"); }
<section class="container login">
    <h1 class="container-title">@ViewData["Title"]</h1>
    <form asp-controller="Account" asp-action="SignIn" method="post" class="login-form">
        <div class="form-group">
            <input asp-for="Email" type="email" placeholder="Email*">
        </div>
        <div class="form-group">
            <input asp-for="Password" type="password" placeholder="Пароль*">
        </div>
        <div class="form-group checkbox">
            <input asp-for="RememberMe" id="rememberme" type="checkbox">
            <label class="label-checkbox" for="rememberme">Запомнить меня</label>
        </div>
        <div class="form-group">
            <button type="submit">Войти</button>
        </div>
    </form>
</section>s
@{ await Html.RenderPartialAsync("_Footer"); }